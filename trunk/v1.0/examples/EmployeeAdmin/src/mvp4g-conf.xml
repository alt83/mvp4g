<?xml version="1.0" encoding="ISO-8859-1" ?>
<mvp4g>
	<views package="com.mvp4g.example.client.view" >
		<view name="rootTemplateView" class="RootTemplateView" />
		<view name="userListView" class="UserListView" />
		<view name="userProfileView" class="UserProfileView"/>
		<view name="userRoleView" class="UserRoleView"/>
	</views>
	<services package="com.mvp4g.example.client" >
		<service name="userService" class="UserService" />
	</services>
	<presenters package="com.mvp4g.example.client.presenter" >
		<presenter name="rootTemplate" class="RootTemplatePresenter" view="rootTemplateView" />
		<presenter name="userList" class="UserListPresenter" view="userListView" services="userService" />
		<presenter name="userProfile" class="UserProfilePresenter" view="userProfileView" services="userService" />
		<presenter name="userRole" class="UserRolePresenter" view="userRoleView" />			
	</presenters>
	<events>
		<event type="changeTopWidget" functionCalled="onChangeTopWidget" eventObjectClass="com.mvp4g.example.client.presenter.view_interface.widget_interface.MyWidgetInterface" handlers="rootTemplate" />
		<event type="changeLeftBottomWidget" functionCalled="onChangeLeftBottomWidget" eventObjectClass="com.mvp4g.example.client.presenter.view_interface.widget_interface.MyWidgetInterface" handlers="rootTemplate" />
		<event type="changeRightBottomWidget" functionCalled="onChangeRightBottomWidget" eventObjectClass="com.mvp4g.example.client.presenter.view_interface.widget_interface.MyWidgetInterface" handlers="rootTemplate" />
		
		<event type="createNewUser" functionCalled="onCreateNewUser" eventObjectClass="com.mvp4g.example.client.bean.UserBean" handlers="userProfile, userRole" />
		<event type="selectUser" functionCalled="onSelectUser" eventObjectClass="com.mvp4g.example.client.bean.UserBean" handlers="userProfile, userRole" />
		<event type="userCreated" functionCalled="onUserCreated" eventObjectClass="com.mvp4g.example.client.bean.UserBean" handlers="userList, userRole" />
		<event type="userUpdated" functionCalled="onUserUpdated" eventObjectClass="com.mvp4g.example.client.bean.UserBean" handlers="userList, userRole" />
		
		
		<event type="start" functionCalled="onStart" handlers="userList, userProfile, userRole" />
		
	</events>
	
	<start view="rootTemplateView" eventType="start" />
	
</mvp4g>		